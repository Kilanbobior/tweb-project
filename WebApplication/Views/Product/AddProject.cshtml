@model WebApplication.Models.Product


<div class="container mt-4">
   
    @using (Html.BeginForm("AddProject", "Product", FormMethod.Post))
    {
        <div>
        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">Основная информация</div>
                    <div class="card-body">
                        <div class="mb-3">
                            @Html.Label("Название")
                            @Html.TextBoxFor(m => m.Title, new { @class = "form-control"})
                        </div>

                        <div class="mb-3">
                            @Html.Label("Описание")
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                            <span class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                @Html.Label("Количество комнат")
                                @Html.TextBoxFor(m => m.RoomCount, new { @class = "form-control" })
                                <span class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                @Html.Label("Количество гостей")
                                @Html.TextBoxFor(m => m.GuestCount, new { @class = "form-control" })
                                <span class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                @Html.Label("Площадь")
                                @Html.TextBoxFor(m => m.Area, new { @class = "form-control" })
                                <span class="text-danger"></span>
                            </div>
                        </div> 

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                @Html.Label("Цена за сутки")
                                @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
                                <span class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                @Html.Label("Цена по праздникам")
                                @Html.TextBoxFor(m => m.HolidayPrice, new { @class = "form-control" })
                                <span class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            @Html.LabelFor(m => m.IsActive)
                            @Html.CheckBoxFor(m => m.IsActive)
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">Изображения</div>
                    <div class="card-body">
                        <div class="mb-3">
                            @Html.Label("Главное изображение")
                            @Html.TextBoxFor(m => m.MainImageUrl, new { @class = "form-control" })
                            <span class="text-danger"></span>
                            <small class="text-muted">Рекомендуемый размер: 1200x800px</small>
                        </div>

                        <div class="mb-3">
                            @Html.Label("Доп изображение")
                            @Html.TextBoxFor(m => m.AdditionalImageUrls, new { @class = "form-control" })
                            <span class="text-danger"></span>
                            <small class="text-muted">Максимум 5 изображений</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Превью изображений</label>
                            <div id="imagePreview" class="d-flex flex-wrap gap-2 mt-2"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
    }
</div>