@model WebApplication.Dto.LoginRequest
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link rel="stylesheet" href="~/wwwroot/login.css" />
</head>
<body>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {<div class="main" align="center"> <p class="sign">Sign in</p> @Html.TextBoxFor(m => m.Username, new { placeholder = "Username", @class = "un" }) @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "pass" }) <button type="submit" class="button-64">Login</button> </div>}
</body>
</html>