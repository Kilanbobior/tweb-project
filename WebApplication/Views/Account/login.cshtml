@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap-5.3.3-dist/css/bootstrap.css">
    <link rel="stylesheet" href="~/Content/css/auto.css">
    <title>Login</title>
</head>
<body>
    <section class="content">
        <div class="container_content">
            <div class="main_window">
                <div class="content_window">
                    <div class="title">
                        <img class="img_user" src="./icons/icons8-user-32.png"><h2>Login</h2>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1"></span>
                        <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Email" aria-label="Recipient's username" aria-describedby="basic-addon2">
                        <span class="input-group-text" id="basic-addon2">.com</span>
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Password" aria-label="Username" aria-describedby="basic-addon1">
                    </div>
                    <div class="button_concant">
                        <button type="button" class="btn btn-outline-success" style="width: 150px;">Success</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>